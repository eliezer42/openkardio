#:kivy 2.2.0
#:import * okwidgets

<OKIconItem>:
    orientation: 'horizontal'
    adaptive_height: True
    padding: dp(8)
    spacing: dp(16)
    MDIcon:
        icon: self.parent.icon
    MDLabel:
        text: self.parent.text

<OKListItem>:
    on_release:
        if self.propagate: app.root.ids.screen_manager.get_screen(root.screen).title = root.text
        app.root.ids.screen_manager.get_screen(root.screen).object_id = root.object_id
        app.root.ids.screen_manager.current = root.screen
        app.root.ids.screen_manager.transition.direction = 'left'
        app.mark_exam_as_opened(root.object_id)
    IconLeftWidget:
        icon: root.icon
    IconRightWidget:
        icon: root.avatar

<OKSelectorItem>:
    on_release:
        if self.propagate: app.root.ids.screen_manager.get_screen(root.screen).title = root.text
        app.root.ids.screen_manager.get_screen(root.screen).object_id = root.object_id
        app.root.ids.screen_manager.current = root.screen
        app.root.ids.screen_manager.transition.direction = 'left'
    IconLeftWidget:
        icon: root.icon

<OKHospitalSelectorItem>:
    md_bg_color: "#d4e1e0"
    IconLeftWidget:
        icon: "hospital-marker"

<OKCommentWidget>:
    orientation: "vertical"
    spacing: "12dp"
    adaptive_height: True
    MDTextField:
        id: text_field
        hint_text: root.hint
        multiline: True
        max_text_length: 280
    Widget:
        height: "40dp"


<OKIdTextField>:
    size_hint_y: None
    height: text_field.height
    MDTextField:
        id: text_field
        hint_text: root.hint_text
        icon_left: "account-circle"
        size_hint_x: 0.5
        pos_hint: {'center_x':0.5}
        disabled: root.disabled
    MDIconButton:
        icon: "pencil"
        pos_hint: {"center_y": .5}
        pos: text_field.x + text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            app.store['user'] = {'id':text_field.text}
            self.icon = "content-save" if self.icon == "pencil" else "pencil"
            root.disabled = False if root.disabled is True else True


<ModeCheck>:
    group: 'mode'
    size_hint: None, None
    size: dp(48), dp(48)

<OKModeControl>:
    MDLabel:
        font_style: "Subtitle2"
        text: "C. Salud"
        pos_hint: {'x': 0.3,'center_y': .5}

    ModeCheck:
        id:C
        value: "C"
        pos_hint: {'x': .4, 'center_y': .5}
        on_active: root.on_checkbox_active(*args)

    MDLabel:
        font_style: "Subtitle2"
        text: "Hospital"
        pos_hint: {'x': 0.6,'center_y': .5}

    ModeCheck:
        id:H
        value: "H"
        pos_hint: {'x': .7, 'center_y': .5}
        on_active: root.on_checkbox_active(*args)

<DurationCheck>:
    group: 'duration'
    size_hint: None, None
    size: dp(48), dp(48)

<OKDeviceControl>:
    MDLabel:
        font_style: "Subtitle2"
        text: "10"
        pos_hint: {'x': 0.25,'center_y': .5}

    DurationCheck:
        id:10
        value: '10'
        pos_hint: {'x': .3, 'center_y': .5}
        on_active: root.on_checkbox_active(*args)

    MDLabel:
        font_style: "Subtitle2"
        text: "20"
        pos_hint: {'x': 0.45,'center_y': .5}

    DurationCheck:
        id:20
        value: '20'
        pos_hint: {'x': .5, 'center_y': .5}
        on_active: root.on_checkbox_active(*args)

    MDLabel:
        font_style: "Subtitle2"
        text: "30"
        pos_hint: {'x': 0.65,'center_y': .5}

    DurationCheck:
        id:30
        value: '30'
        pos_hint: {'x': .70, 'center_y': .5}
        on_active: root.on_checkbox_active(*args)

<FilterCheck>:
    group: 'filter'
    size_hint: None, None
    size: dp(48), dp(48)

<OKFilterControl>:
    MDLabel:
        font_style: "Subtitle2"
        text: "ON"
        pos_hint: {'x': 0.3,'center_y': .5}
    FilterCheck:
        id:on
        value: "on"
        pos_hint: {'x': .4, 'center_y': .5}
        on_active: root.on_checkbox_active(*args)

    MDLabel:
        font_style: "Subtitle2"
        text: "OFF"
        pos_hint: {'x': 0.6,'center_y': .5}
    FilterCheck:
        id:off
        value: "off"
        pos_hint: {'x': .7, 'center_y': .5}
        on_active: root.on_checkbox_active(*args)

<OKPercentBar>:
    orientation:"horizontal"
    spacing: "8dp"
    MDLabel:
        text: root.text
        color: root.color
        font_style: "Button"
        size_hint_x: 0.4
        halign: "right"
    Widget:
        size_hint_x: 0.45
        canvas.before:
            Color:
                rgba: root.color
            Rectangle:
                pos: self.pos
                size: (self.width*root.percent), (self.top - self.y)
    MDLabel:
        size_hint_x: 0.15
        text: str(round(root.percent*100)) + '%'
        color: root.color
        font_style: "Caption"
        halign: 'left'
        bold: True


<SummaryCard>:
    padding: dp(16)
    style: "filled"
    md_bg_color: "#f6eeee"
    shadow_offset: (0, -1)
    line_color: (0.2, 0.2, 0.2, 0.8)

    MDRelativeLayout:

        MDIcon:
            icon: root.icon
            pos_hint: {"top": 1, "x": 0}
            font_size: "36sp"
            color: "#3f3f3f"

        MDLabel:
            text: root.text
            adaptive_size: True
            pos_hint: {"top": 1, "center_x": 0.5}
            bold: True
            font_size: "32sp"
            color: "#3f3f3f"

        MDBoxLayout:
            orientation: "horizontal"
            pos: 0,0
            size_hint: 1,0.8

            MDBoxLayout:
                orientation: "vertical"
                spacing: "8dp"
                size_hint_x: 0.35

                Widget:
                    size_hint_y: 0.2

                MDLabel:
                    text: str(root.count)
                    font_size: "80sp"
                    halign: "center"
                    bold: True
                    adaptive_height: True
                
                MDLabel:
                    text: root.label
                    font_size: "20sp"
                    halign: "center"
                    size_hint_y:0.2
                
                Widget:
                    size_hint_y: 0.2

            MDBoxLayout:
                id: container
                orientation: 'vertical'
                size_hint_x: 0.65
                spacing: "12dp"
                padding: [dp(4),dp(12),dp(4),dp(12)]
                md_bg_color: 0.9,0.9,0.9,0.5

        Widget:
            pos_hint: {"x":0, "y":0}
            size_hint: 1, 0.2
