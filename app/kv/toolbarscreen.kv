#:kivy 2.1.0
#:import ToolbarScreen toolbarscreen

<ToolbarScreen>:
    md_bg_color: "#e0dbf1"
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: root.title
            anchor_title: "left"
            pos_hint: {'top':1.0}
            elevation: "0dp"
            left_action_items: root.action_items
            right_action_items: root.right_items
        MDBoxLayout:
            id: container
            orientation: 'vertical'
            padding: "8dp"
            spacing: "8dp"