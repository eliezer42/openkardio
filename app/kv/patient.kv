#:kivy 2.2.0
#:import * patient
#:import * okwidgets
#:import * exam

<PatientList>:
    orientation: 'vertical'
    spacing: dp(8)
    padding: dp(8)

    MDBoxLayout:
        adaptive_height: True
        MDIconButton:
            icon: 'magnify'
        MDTextField:
            id: search_field
            hint_text: 'Buscar paciente'
            on_text: root.populate(self.text, True)
    RecycleView:
        id: rv
        key_viewclass: 'viewclass'
        key_size: 'height'

        RecycleBoxLayout:
            padding: dp(8)
            default_size: None, None
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            
<PatientDetail>:
    orientation: 'vertical'
    padding: "8dp"
    spacing: "16dp"
    MDCard:
        orientation: "vertical"
        padding: dp(12)
        spacing: dp(16)
        style: "filled"
        md_bg_color: "#f6eeee"
        shadow_offset: (0, -1)
        line_color: (0.2, 0.2, 0.2, 0.8)
        MDLabel:
            text: "Información General"
            theme_text_color: "Secondary"
            font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]
        MDBoxLayout:
            orientation: "horizontal"
            adaptive_height: True
            padding: dp(8)
            spacing: dp(12)
            MDIcon:
                halign: "center"
                icon: root.sex_icon
                size_hint: 0.2, None
                height: "36dp"
            MDLabel:
                id: name
                markup:True
                size_hint_y: 1
                font_style: "Subtitle1"
                valign: "center"
                halign: "left"
        MDSeparator:
            height: "1dp"
        MDLabel:
            id: age
            markup:True
            size_hint_y: None
            height: self.texture_size[1]
        MDLabel:
            id: identification
            markup:True
            size_hint_y: None
            height: self.texture_size[1]
        MDLabel:
            id: record
            markup:True
            size_hint_y: None
            height: self.texture_size[1]
        MDLabel:
            id: address
            markup:True
            size_hint_y: None
            height: self.texture_size[1]
        MDLabel:
            id: contact
            markup:True
            size_hint_y: None
            height: self.texture_size[1]
        MDSeparator:
            height: "2dp"
        MDLabel:
            text: "Examenes recientes"
            theme_text_color: "Secondary"
            font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]
        MDList:
            id:exams
        Widget:

<FormField>:
    orientation: 'horizontal'
    adaptive_height: True
    padding: "4dp"
    spacing: "8dp"
    MDLabel:
        text: root.label
        size_hint_x: 0.30
        halign: "right"
        valign: "bottom"
        font_style: "Body2"

<PatientForm>:
    orientation: 'vertical'
    padding: "8dp"
    spacing: "6dp"
    adaptive_height: True
    FormField:
        id: first_name
        label: "Nombres:"
        MDTextField:
            text: self.parent.text
            hint_text: "Nombres del paciente*"
            error: self.parent.error
            helper_text_mode: "on_error"
            helper_text: "Requerido"
            on_text: self.parent.value = self.text
            mode: "fill"
            fill_color_normal: 0.9, 0.9, 0.9, 0.8
            fill_color_focus: 1, 1, 1, 0.9
    FormField:
        id: last_name
        label: "Apellidos:"
        MDTextField:
            text: self.parent.text
            hint_text: "Apellidos del paciente*"
            error: self.parent.error
            helper_text_mode: "on_error"
            helper_text: "Requerido"
            on_text: self.parent.value = self.text
            mode: "fill"
            fill_color_normal: 0.9, 0.9, 0.9, 0.8
            fill_color_focus: 1, 1, 1, 0.9
    FormField:
        id: address
        label: "Domicilio:"
        MDTextField:
            text: self.parent.text
            hint_text: "Dirección convencional"
            on_text: self.parent.value = self.text
            mode: "fill"
            fill_color_normal: 0.9, 0.9, 0.9, 0.8
            fill_color_focus: 1, 1, 1, 0.9
    FormField:
        id: identification
        label: "Cédula:"
        MDTextField:
            text: self.parent.text
            hint_text: "Cédula de identidad"
            max_text_length: 16
            min_text_length: 14
            on_text: self.parent.value = self.text
            mode: "fill"
            fill_color_normal: 0.9, 0.9, 0.9, 0.8
            fill_color_focus: 1, 1, 1, 0.9
    FormField:
        id: sex
        label: "Sexo:"
        MDTextField:
            text: self.parent.text
            hint_text: "Seleccione el sexo del paciente"
            error: self.parent.error
            helper_text_mode: "on_error"
            helper_text: "Requerido"
            icon_right: "arrow-down-drop-cirle-outline"
            on_focus: if self.focus: app.root.ids.patient_form.sex_menu.open()
            on_text: self.parent.value = self.text[0] if len(self.text) else ""
            mode: "fill"
            fill_color_normal: 0.9, 0.9, 0.9, 0.8
            fill_color_focus: 1, 1, 1, 0.9
    FormField:
        id: birth_date
        label: "Fecha de nacimiento:"
        MDTextField:
            hint_text: "Escriba la fecha (dd/mm/aaaa)*"
            helper_text_mode: "on_error"
            on_text: self.parent.text = self.text
            fill_color_normal: 0.9, 0.9, 0.9, 0.8
            fill_color_focus: 1, 1, 1, 0.9
    FormField:
        id: record
        label: "Expediente:"
        MDTextField:
            text: self.parent.text
            hint_text: "Número de expediente*"
            helper_text_mode: "on_error"
            helper_text: "Requerido"
            on_text: self.parent.value = self.text
            mode: "fill"
            fill_color_normal: 0.9, 0.9, 0.9, 0.8
            fill_color_focus: 1, 1, 1, 0.9
    FormField:
        id: emergency_contact
        label: "Contacto de emergencia:"
        MDTextField:
            text: self.parent.text
            hint_text: "Nombre, parentesco y teléfono"
            on_text: self.parent.value = self.text
            mode: "fill"
            fill_color_normal: 0.9, 0.9, 0.9, 0.8
            fill_color_focus: 1, 1, 1, 0.9
    MDBoxLayout:
        orientation: 'horizontal'
        adaptive_height: True
        padding: "8dp"
        spacing: "8dp"
        Widget:
        MDFlatButton:
            text: "CANCELAR"
            on_release: app.go_back("patient_list_view")
        MDRaisedButton:
            text: "GUARDAR"
            on_release: 
                app.root.ids.screen_manager.get_screen("patient_detail_view").object_id = root.save_form()
                app.root.ids.screen_manager.current = "patient_detail_view"
        